<h1>Listing users</h1>
<% if signed_in? %>
<h4> Name <%= current_user.name %></h4>
  <div class="row offset4">




    <%= current_user.name %>  <br />
    <%= link_to 'Show', current_user %>
    <%= link_to 'Edit', edit_user_path(current_user) %>
